
<% if logged_in? %>
  <script id="bootstrap-current-user" type="text/javascript">
    window.currentUser = <%= render("api/users/user.json.jbuilder",
    user: current_user).html_safe %>;
  </script>
<% end %>

<script>
  $(function(){

    $("body").on("click", ".js-modal-open", function(event){
      event.preventDefault();
      $(".modal").addClass("is-open");
    });

    $("body").on("click", ".js-modal-close", function(event){
      event.preventDefault();
      $(".modal").removeClass("is-open");
    });
  });
</script>

<script>
  $(function(){

    $("body").on("click", ".js-form-open", function(event){
      event.preventDefault();
      $(".toggle-form").addClass("is-open");
    });

    $("body").on("click", ".js-form-close", function(event){
      event.preventDefault();
      $(".toggle-form").removeClass("is-open");
    });
  });
</script>

